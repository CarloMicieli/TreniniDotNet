{
  "ConnectionStrings": {
    "IdentityConnection": "Host=localhost;Database=TreniniDb;Username=tdbuser;Password=tdbpass",
    "Default": "Host=localhost;Database=TreniniDb;Username=tdbuser;Password=tdbpass"
  },
  "JWT": {
    "Secret": "My super secret secure key",
    "Issuer": "http://www.trenini.net",
    "Audience": "http://www.trenini.net"
  },  
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "System": "Information",
        "Microsoft": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "File",
              "Args": {
                "path": "./Logs/app.log",
                "rollingInterval": "Day",
                "retainedFileCountLimit": 7,
                "buffered": true
              }
            }
          ]
        }
      }
    ],
    "Enrich": [ "FromLogContext" ]
  },
  "AllowedHosts": "*"
}